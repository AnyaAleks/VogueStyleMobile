# Общие стили для всех виджетов
<ColoredButton@Button>:
    background_normal: ''
    background_color: app.styles.PRIMARY
    color: app.styles.WHITE
    font_size: '16sp'
    size_hint_y: None
    height: app.styles.BUTTON_HEIGHT
    bold: True
    canvas.before:
        Color:
            rgba: app.styles.PRIMARY_DARK if self.state == 'down' else app.styles.PRIMARY
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [app.styles.CARD_RADIUS,]
    canvas.after:
        Color:
            rgba: app.styles.WHITE
        Line:
            width: 1
            rounded_rectangle: [self.x, self.y, self.width, self.height, app.styles.CARD_RADIUS]

<TitleLabel@Label>:
    color: app.styles.PRIMARY
    font_size: app.styles.TITLE_SIZE
    bold: True
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<BodyLabel@Label>:
    color: app.styles.DARK_TEXT
    font_size: app.styles.SUBTITLE_SIZE
    text_size: self.size
    halign: 'center'
    valign: 'middle'

<CustomSpinnerOption@Button>:
    background_color: (0.9, 0.9, 0.9, 1)
    color: (0, 0, 0, 1)
    size_hint_y: None
    height: 40
    on_release: app.root.get_screen('home').selected_salon = self.text

<SalonCard@BoxLayout>:
    orientation: 'vertical'
    padding: 0
    spacing: 10
    size_hint_x: 1
    width: self.parent.width if self.parent else 0
    canvas.before:
        Color:
            rgba: app.styles.WHITE
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [app.styles.CARD_RADIUS, app.styles.CARD_RADIUS, 0, 0]
    canvas.after:
        Color:
            rgba: app.styles.WHITE
        Line:
            width: 1
            rounded_rectangle: [self.x, self.y, self.width, self.height, app.styles.CARD_RADIUS, app.styles.CARD_RADIUS, 0, 0]

<SpecialOfferCard@BoxLayout>:
    text: ''
    orientation: 'vertical'
    padding: 10
    canvas.before:
        Color:
            rgba: app.styles.ACCENT_COLOR
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [app.styles.CARD_RADIUS,]
    Label:
        text: root.text
        color: app.styles.WHITE
        bold: True
        font_size: '14sp'
        text_size: self.width, None
        halign: 'center'
        valign: 'middle'

<ActionButtonList@Button>:
    icon: ''
    background_normal: ''
    background_color: [0, 0, 0, 0]
    color: app.styles.WHITE
    font_size: '14sp'
    bold: True
    size_hint_y: None
    height: 60
    width: self.parent.width
    canvas.before:
        Color:
            rgba: app.styles.PRIMARY if self.state == 'normal' else app.styles.WHITE
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [app.styles.CARD_RADIUS,]

<ActionButtonBack@Button>:
    icon: ''
    background_normal: ''
    background_color: [0, 0, 0, 0]
    color: app.styles.WHITE
    font_size: '14sp'
    bold: True
    size_hint_y: None
    height: 60
    size_hint_x: 0.5
    pos_hint: {"center_x": 0.5, "center_y": 0.5}  # Центрирование по родителю
    canvas.before:
        Color:
            rgba: app.styles.PRIMARY if self.state == 'normal' else app.styles.WHITE
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [app.styles.CARD_RADIUS,]


<FooterLabel@Label>:
    color: app.styles.DARK_TEXT
    font_size: '12sp'
    text_size: self.size
    halign: 'center'
    valign: 'middle'