<MasterScreen>:
    canvas.before:
        Color:
            rgba: app.styles.WHITE
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 20

        TitleLabel:
            text: 'Личный кабинет'
            size_hint_y: 0.1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 50
            padding: [0, 10]

            BodyLabel:
                text: 'ФИО:'
                size_hint_x: 0.3
                halign: 'right'

            BodyLabel:
                text: 'Иванова Мария Петровна'
                color: app.styles.PRIMARY
                size_hint_x: 0.7

        ColoredButton:
            text: 'Назад'
            size_hint: 0.6, None
            pos_hint: {'center_x': 0.5}
            on_press: root.manager.current = 'home'