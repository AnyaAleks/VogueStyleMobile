<ServicesScreen>:
    Image:
        source: 'assets/images/background_blueWater.jpg'
        allow_stretch: True
        keep_ratio: False
        size: root.size
        pos: root.pos

    BoxLayout:
        orientation: 'vertical'
        padding: [0, 5, 0, 0]

        # Заголовок
        BoxLayout:
            size_hint_y: 0.15
            orientation: 'vertical'
            spacing: 5
            TitleLabel:
                text: 'УСЛУГИ'
                color: app.styles.WHITE

        # Карточка салона
        SalonCard:
            size_hint_y: 0.9
            #size_hint_y: None  # Установите size_hint_y в None
            height: self.parent.height * 0.3
            width: self.parent.width
            size_hint_x: 1
            padding: [0, 20, 0, 20]

            BoxLayout:
                orientation: 'vertical'

                ScrollView:
                    GridLayout:
                        id: services_grid
                        cols: 1
                        spacing: 15
                        padding: 20
                        size_hint_y: None
                        height: self.minimum_height

                ActionButtonBack:
                    text: 'Назад'
                    on_press: root.manager.current = 'home'

<ServiceItem@BoxLayout>:
    size_hint_y: None
    height: 60
    canvas.before:
        Color:
            rgba: app.styles.LIGHT_PURPLE
        Rectangle:
            pos: self.pos
            size: self.size

    BodyLabel:
        text: root.service_name

    BodyLabel:
        text: root.service_price
