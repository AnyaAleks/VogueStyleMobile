<ServicesScreen>:
    canvas.before:
        Color:
            rgba: app.styles.WHITE
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        TitleLabel:
            text: 'Наши услуги'
            size_hint_y: 0.1

        ScrollView:
            GridLayout:
                cols: 1
                spacing: 15
                padding: 20
                size_hint_y: None
                height: self.minimum_height

                BoxLayout:
                    size_hint_y: None
                    height: 60
                    canvas.before:
                        Color:
                            rgba: app.styles.LIGHT_PURPLE
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    BodyLabel:
                        text: 'Стрижка'

                    BodyLabel:
                        text: '1500 руб'

        ColoredButton:
            text: 'Назад'
            size_hint: 0.6, None
            pos_hint: {'center_x': 0.5}
            on_press: root.manager.current = 'home'