<HomeScreen>:
    canvas.before:
        Color:
            rgba: app.styles.WHITE
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        TitleLabel:
            text: 'VogueStyle'
            size_hint_y: 0.3

        BodyLabel:
            text: 'Насладись каждым мгновением с нами!'
            size_hint_y: 0.2

        ColoredButton:
            text: 'Наши услуги'
            size_hint: 0.8, None
            height: app.styles.BUTTON_HEIGHT
            pos_hint: {'center_x': 0.5}
            on_press: root.manager.current = 'services'