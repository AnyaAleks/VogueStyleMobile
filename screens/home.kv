# screens/home.kv
<HomeScreen>:
    Image:
        source: 'assets/images/background_blueWater.jpg'
        allow_stretch: True
        keep_ratio: False
        size: root.size
        pos: root.pos

    BoxLayout:
        orientation: 'vertical'
        padding: [0, 40, 0, 0]
        spacing: 20

        # Заголовок
        BoxLayout:
            size_hint_y: 0.15
            orientation: 'vertical'
            spacing: 5
            TitleLabel:
                text: 'VOGUESTYLE'
                color: app.styles.WHITE
            BodyLabel:
                text: 'BEAUTY STUDIO'
                color: app.styles.WHITE

        # Карточка салона
        SalonCard:
            #size_hint_y: 0.3
            size_hint_y: None  # Установите size_hint_y в None
            height: self.parent.height * 0.3
            width: self.parent.width
            size_hint_x: 1

            # Выпадающий список
            Spinner:
                id: salon_spinner
                size_hint_y: None
                height: 50
                text: root.selected_salon  # Привязываем к выбранному салону
                values: [salon['name'] for salon in root.salon_data]
                on_text: root.on_salon_select(self.text)  # Обработчик события выбора
                sync_height: True

            # Кнопки действий
            GridLayout:
                cols: 1  # Изменить на 1, чтобы кнопки были в одном столбце
                spacing: 15
                padding: [0, 20, 0, 0]
                size_hint_y: 0.4

                ActionButton:
                    text: 'Выбрать специалиста'
                    icon: 'assets/icons/master.png'  # Укажите путь к изображению
                    on_press: root.manager.current = 'master'

                ActionButton:
                    text: 'Выбрать дату и время'
                    icon: 'assets/icons/calendar.png'  # Укажите путь к изображению
                    on_press: root.manager.current = 'date_time'

                ActionButton:
                    text: 'Выбрать услуги'
                    icon: 'assets/icons/services.png'  # Укажите путь к изображению
                    on_press: root.manager.current = 'services'








